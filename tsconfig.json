{
	"compilerOptions": {
		// Environment setup
		"lib": ["DOM", "ES5", "ES6", "ES7"],
		"target": "ES6",
		"module": "esnext",
		"moduleDetection": "force",
		"jsx": "react-jsx",
		"allowJs": true,
		"baseUrl": ".",

		// Bundler mode
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,

		// Best practices
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		"noImplicitAny": true
	},
	"include": ["src/**/*"]
}
